    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <HorizontalStackLayout
        Spacing="12"
        Padding="10"
        VerticalOptions="Center">

        <Label Text="ðŸ”ˆ"
               FontSize="16"
               VerticalOptions="Center"/>

        <Slider x:Name="VolumeSlider"
                Minimum="0"
                Maximum="1"
                HeightRequest="40"
                WidthRequest="200"
                VerticalOptions="Center"
                Value="1"

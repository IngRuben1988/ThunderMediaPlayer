<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="ThunderMediaPlayer.Src.Controls.CustomListMusic"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <VerticalStackLayout Spacing="10">

        <Button
            Text="Seleccionar mÃºsica"
            Clicked="OnPickMusicClicked"/>

        <CollectionView
            x:Name="AudioList"
            SelectionMode="Single"
            SelectionChanged="OnAudioSelected"
            HeightRequest="300">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">
                        <Label Text="{Binding FileName}"
                               FontSize="14"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>

    </VerticalStackLayout>

</ContentView>
